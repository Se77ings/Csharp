<div @onclick="Toggle" class="pe-auto">
    <h5>@Title</h5>
    @if (IsExpanded)
    {
        <div>@ChildContent</div>
    }
</div>
@code {
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    [Parameter]
    public bool IsExpanded { get; set; }

    private void Toggle()
    {
        IsExpanded = !IsExpanded;
    }
}
